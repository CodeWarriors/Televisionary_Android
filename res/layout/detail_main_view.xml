<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aa"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_txt_detailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name" />

    <ImageView
        android:id="@+id/poster_image_detailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/loading_image" />

    <TextView
        android:id="@+id/rating_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Rating" />

    <LinearLayout
        android:id="@+id/rate_p_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/rating_percentage_detailview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99%"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RatingBar
            android:id="@+id/bar_detailview"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loved_i_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/loved_trakt_detailview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trakt_love_large" />

        <TextView
            android:id="@+id/loved_txt_detailview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <TextView
        android:id="@+id/aired_details_detailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday at OO.OOPM On CBS"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/televisionary_light_green" />

    <TextView
        android:id="@+id/show_summary_txt_detailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>