<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
>

        <ImageView
            android:id="@+id/image_pos"
            android:layout_width="138px"
            android:layout_height="203px"
            android:contentDescription="image Loading"
            android:padding="5dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical" >

            <TextView
                android:id="@+id/show_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textColor="@color/txt_green"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/show_summary_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_light_gray"
                android:text="TextView"
                android:ellipsize="end"
                android:lines="2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/show_aired_details_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Large Text"
                android:textColor="@color/txt_light_gray"
                
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>